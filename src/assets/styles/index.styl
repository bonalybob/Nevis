@import 'helpers'
@import 'inputs'
@import 'scrollbars'
@import 'tables'

html, body, #app
  overflow: hidden
  box-sizing: border-box
  margin: 0
  padding: 0
  height: 100vh

main
  display: grid
  box-sizing: border-box
  padding: 1rem
  width: 100%
  grid-gap: 15px

h1, h2, h3, h4, h5, h6, b
  margin: 0
  padding: 0
  font-weight: 500
  font-family: Montserrat
  user-select: none

p, img, label, button, a, input
  margin: 0
  padding: 0
  outline: 0
  font-weight: 300
  font-family: Montserrat

label, button, a, b
  user-select: none

.title
  color: main-color
  font-size: 2.2rem

.button
  display: inline-block
  margin-top: 0.5rem
  padding: 0.5rem 1.25rem
  outline: 0
  border: 0
  background-color: main-color
  color: white
  text-align: center
  text-decoration: none
  font-size: 1rem
  transition: 0.3s
  box-shadow()
  margin-right: 1rem

  &:hover
    box-shadow(2)

.card
  box-shadow()
  padding: 1rem
  transition: 0.3s

  &.input
    padding: 0

.fade-item
  transition: all 0.5s ease-out

.fade-enter, .fade-leave-to
  opacity: 0

.open-enter-active, .open-leave-active
  transition: 0.3s transform
  transform: scaleY(1)
  transform-origin: top

.open-enter, .open-leave-to
  transform: scaleY(0)
  transform-origin: top