@import 'helpers.styl'

table
  width: 100%
  border-collapse: collapse
  user-select: none
  -webkit-user-select: none
  default-font()

  tr
    transition: 0.3s

    &:hover
      background-color: light-color

    td, th
      padding: 7px 0
      text-align: center

    th
      font-weight: bold

  .striped
    tr:nth-child(even)
      background-color: very-light-color
