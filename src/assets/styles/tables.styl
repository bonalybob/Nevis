@import 'helpers'

table
  width: 100%
  border-collapse: collapse
  font-weight: 300
  font-family: Montserrat
  user-select: none
  -webkit-user-select: none

  tr
    transition: 0.3s ease-out

    &:nth-child(odd)
      background-color: very-light-color

    &:hover
      background-color: light-color

    td, th
      padding: 7px 0
      text-align: center

    th
      font-weight: 500

  thead tr:nth-child(odd)
    background-color: white

    &:hover
      background-color: light-color
