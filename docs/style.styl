color-main = #0D47A1

html, body
  margin: 0
  padding: 0
  min-height: 100%
  width: 100%

header
  position: fixed
  width: 100%
  height: 50px
  background-color: alpha(color-main, 0.86)
  color: white

  h1
    display: inline-flex
    margin: 0
    padding: 9px 1.5rem
    font-weight: 400
    font-weight: 400
    font-size: 26px
    font-family: Montserrat

  nav
    position: absolute
    right: 0
    display: inline-flex
    padding: 0 2rem
    height: 100%

    a
      box-sizing: border-box
      margin: auto 0
      padding: 15px 1.2rem
      height: 100%
      height: 100%
      color: white
      text-decoration: none
      font-weight: 300
      font-family: Montserrat
      transition: 0.3s

      &:hover
        background-color: alpha(white, 0.1)

main
  h1, h2, h3, h4, h5, h6
    margin: 1rem 0
    color: color-main
    font-weight: 400
    font-family: Montserrat

  h2
    font-size: 1.8rem

  h3
    font-size: 1.3rem

  p
    margin: 0.5rem 0
    font-weight: 300
    font-size: 1rem
    font-family: Montserrat

  .header
    display: inline-flex
    flex: 1 0 10px
    justify-content: center
    align-items: center
    box-sizing: border-box
    padding: 3rem 1.5rem
    padding-top: calc(2rem + 50px)
    width: 100%
    background: url('./assets/largeBackground.png')
    background-color: #1565C0
    background-size: cover
    background-repeat: no-repeat
    color: white

    #text
      padding-left: 7.5%

    img
      height: 12rem

    h1
      margin: 0.8rem 0
      color: white
      font-weight: 400
      font-size: 3rem

    h3
      margin: 0.5rem 0
      color: white
      font-weight: 300
      font-size: 1.5rem

    #buttons
      display: inline-flex
      box-sizing: border-box
      margin: 0.5rem 0

      a
        padding: 0.5rem
        border: 1px solid white
        color: white
        text-decoration: none
        font-weight: 300
        font-size: 1rem
        font-family: Montserrat
        transition: 0.3s

        &:not(:first-child)
          margin-left: 1rem

        &:hover
          background-color: alpha(white, 0.4)

  .content
    margin-left: 5%
    width: 90%

    div
      padding: 0 0.5rem

    blockquote
      margin: 0
      padding: 0.5rem
      border-left: 3px solid color-main
      font-weight: 300
      font-size: 1.25rem
      font-family: Montserrat

    ul, li
      list-style: none
      font-weight: 300
      font-size: 1rem
      font-family: Montserrat

    ul li::before
      display: inline-block
      margin-left: -1em
      width: 1em
      color: color-main
      content: '\2022'
      font-weight: bold

    .screenshots
      display: inline-flex
      overflow-x: auto
      padding-bottom: 10px
      width: 100%
      scrollbar-color: alpha(color-main, 0.5) alpha(color-main, 0)
      scrollbar-width: thin

      img
        margin: 10px
        height: 300px
        user-select: none
        -moz-user-focus: none
        -moz-user-select: none
        -ms-user-select: none
        -webkit-user-select: none

footer
  margin-top: 1.75rem
  border-top: 1px solid color-main
  color: color-main
  text-align: center
  font-weight: 300
  font-size: 1rem
  font-family: Montserrat

  p
    margin: 0
    padding: 0.5rem

@media (max-width: 650px)
  header
    nav
      display: none

    h1
      display: block
      box-sizing: border-box
      width: 100%
      text-align: center

  main
    .header
      display: block
      padding: 1rem 1.5rem
      padding-top: calc(1rem + 50px)
      background: url('./assets/smallBackground.svg')
      background-color: #1565C0
      background-size: cover
      background-repeat: no-repeat
      text-align: center

      img
        height: 10rem

      #text
        box-sizing: border-box
        padding: 0
        width: 100%

        h3
          margin: 14px

        #buttons
          display: block

          a
            display: block
            box-sizing: border-box
            margin: 0.75rem 0
            padding: 0.5rem
            width: 100%

            &:last-child
              margin-bottom: 0

::-webkit-scrollbar
  width: 8px
  height: 8px
  background-color: #0000
  color: alpha(color-main, 0.5)

::-webkit-scrollbar-track
  background-color: #0000
  color: alpha(color-main, 0.5)

::-webkit-scrollbar-thumb
  background-color: alpha(color-main, 0.5)