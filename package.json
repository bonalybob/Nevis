{
    "name": "nevis",
    "version": "3.0.0",
    "description": "Fast and Easy Results for Orienteering",
    "license": "MIT",
    "author": {
        "name": "bonalybob"
    },
    "keywords": [
        "orienteering",
        "sportident",
        "timing",
        "results",
        "nevis",
        "electron"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/bonalybob/nevis.git"
    },
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "rebuild": "electron-builder install-app-deps",
        "postinstall": "npm run rebuild",
        "dist": "build",
        "pack": "build --dir",
        "go": "npm install && npm run styles && npm start",
        "lint": "eslint ./scripts/**",
        "styles": "stylus ./styles/index.styl -o ./styles/styles.css -m -c && stylus ./styles/message.styl -m -c && stylus ./styles/new-event.styl -m -c",
        "watch:styles": "stylus ./styles/index.styl -o ./styles/styles.css -m -c -w"
    },
    "build": {
        "appId": "Nevis",
        "productName": "Nevis",
        "license": "./LICENSE.md",
        "installerIcon": "./assets/nevis.ico",
        "installerHeaderIcon": "./assets/nevis.ico",
        "copyright": "Copyright Â© 2018 Bonalybob",
        "win": {
            "target": "nsis",
            "icon": "./assets/nevis.ico"
        }
    },
    "dependencies": {
        "ejs": "^2.6.1",
        "electron-updater": "^2.21.10",
        "lokijs": "^1.5.5",
        "node-thermal-printer": "git+https://github.com/bonalybob/node-thermal-printer.git",
        "printer": "^0.2.2",
        "serialport": "^6.2.0",
        "simple-encryptor": "^1.3.0",
        "vue": "^2.5.16",
        "xml2js": "^0.4.19"
    },
    "devDependencies": {
        "electron": "^2.0.2",
        "electron-builder": "^20.15.1",
        "eslint": "^4.19.1",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-promise": "^3.8.0",
        "eslint-plugin-standard": "^3.1.0",
        "stylus": "^0.54.5"
    }
}
