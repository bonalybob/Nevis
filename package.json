{
  "name": "nevis",
  "productName": "Nevis",
  "version": "4.0.0-beta",
  "description": "Fast and Easy Results for Orienteering",
  "author": "brownben",
  "license": "MIT",
  "repository": "git+https://github.com/brownben/nevis.git",
  "bugs": "https://github.com/brownben/nevis/issues",
  "homepage": "https://github.com/brownben/nevis#readme",
  "main": "main.js",
  "keywords": [
    "timing",
    "orienteering",
    "results",
    "sportident"
  ],
  "dependencies": {
    "axios": "^0.18.0",
    "pouchdb": "^7.0.0",
    "serialport": "^7.0.2",
    "vue": "^2.5.17",
    "vue-async-computed": "^3.5.0",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-service": "^3.1.4",
    "concurrently": "^4.0.1",
    "electron": "^3.0.9",
    "electron-builder": "^20.34.0",
    "electron-toolkit": "^1.0.24",
    "eslint": "^5.9.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^4.7.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "stylus-supremacy": "^2.12.7",
    "vue-template-compiler": "^2.5.17"
  },
  "scripts": {
    "dev": "concurrently -n vue,electron \"vue-cli-service serve\" \"electron . --NODE_ENV=development\"",
    "build": "vue-cli-service build",
    "rebuild": "electron-builder install-app-deps",
    "postinstall": "npm run rebuild",
    "dist": "build",
    "pack": "build --dir",
    "lint": "npm run lint-styles && npm run lint-js",
    "lint-js": "eslint main.js ./src/ --ext .vue,.js --fix",
    "lint-styles": "stylus-supremacy format ./src/assets/styles/*.styl --options stylusSupremacy.json --replace",
    "electron-toolkit": "electron ./node_modules/electron-toolkit"
  },
  "vue": {
    "baseUrl": "./"
  },
  "build": {
    "appId": "Nevis",
    "productName": "Nevis",
    "win": {
      "target": "nsis",
      "icon": "./assets/nevis.ico"
    }
  }
}
