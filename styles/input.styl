input
    font-family: Montserrat
    width: 100%
    border: 1px solid alpha(color-main, 0.5)
    outline: 0
    padding: 4px
    margin: 3px 0 5px 0
    color: black
    transition:.5s
    font-size:14px
    &:last-child
        margin-bottom:0px
    &:focus
        border: 1px solid color-main

label
    font-family:Montserrat
    font-size:10px
    margin-bottom:3px
    user-select:none

.dropdown-input
    margin-bottom:-20px
    select
        -webkit-appearance: none
        border: 1px solid alpha(color-main, 0.5)
        width: 100%
        padding: 4px
        font-size:14px
        font-family: Montserrat
        outline:0
        color:black
        margin: 3px 0 5px 0
        &:focus
            border: 1px solid color-main
    select:focus+label
        svg
            fill:color-main
    svg
        position: relative
        top: -30px
        right: calc(-100% + 25px)
        transition:.5s
        alpha(color-main, 0.5)

::placeholder
    color:alpha(color-main, 0.5)
    transition:.5s color


.checkbox-input
    margin-bottom: 20px
    padding: 0
    height: 0
    input
        display: none
    label
        font-family:Montserrat
        position: relative
        font-size: 16px
        width: 50px
        transition: 0.45s ease-out
        margin: 0px
        -webkit-user-select: none
        user-select: none
        color:black
        &:not(:first-child)
            margin-left: 20px
    span
        height: 10px
        width: 10px
        margin-left: 10px
        border: 1px solid alpha(color-main, 0.5)
        display: inline-block
        position: relative
        transition: 0.5s
    [type="checkbox"]:checked+span
        height: 12px
        width: 6px
        margin-left: 13px
        border: 1.5px solid color-main
        display: inline-block
        position: relative
        border-top: 0
        border-left: 0
        transition: 0.5s
        transform: rotate(405deg)

main button
    user-select:none
    width:100%
    color:color-main
    background-color:white
    border: 1px solid color-main
    padding:5px
    outline:0
    margin:3px 0
    font-family:Montserrat
    transition:.5s
    &:hover
        background-color:color-main
        color:white
    &.fifty
        width: calc(50% - 2px)
